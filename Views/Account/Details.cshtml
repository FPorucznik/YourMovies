@model YourMovies.ViewModels.DetailsViewModel
@using System.Security.Claims;
@{
    ViewData["Title"] = "Your Movies";
}

<div class="row justify-content-center">
    <div class="col-md-4">
        <h1>Account Details</h1>
        <div class="form-group">
            <span class="font-weight-bold">@Html.DisplayNameFor(m => m.Email)</span> <span>@Model.Email</span>
        </div>
        <div class="form-group">
            <span class="font-weight-bold">@Html.DisplayNameFor(m => m.AccountType)</span>  <span>@Model.AccountType</span>
        </div>
        <div class="form-group">
            <span class="font-weight-bold">@Html.DisplayNameFor(m => m.FavouriteNumber)</span>  <span>@Model.FavouriteNumber</span>
        </div>
    </div>
</div>
