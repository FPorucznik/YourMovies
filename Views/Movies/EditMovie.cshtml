@model Movie
@{
    ViewData["Title"] = "Your Movies";
}

<div class="text-center">
    <h1 class="display-4">Edit movie</h1>
</div>
<div class="row justify-content-center">
    <form method="post" asp-action="EditMovie" asp-controller="Movies"
          class="w-50">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input value="@Model.Id" hidden/>
        <div class="form-group">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" value="@Model.Title"/>
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ReleaseYear"></label>
            <input asp-for="ReleaseYear" class="form-control" value="@Model.ReleaseYear"/>
            <span asp-validation-for="ReleaseYear" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Director"></label>
            <input asp-for="Director" class="form-control" value="@Model.Director"/>
            <span asp-validation-for="Director" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Genre"></label>
            <input asp-for="Genre" class="form-control" value="@Model.Genre"/>
            <span asp-validation-for="Genre" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ImageUrl"></label>
            <input asp-for="ImageUrl" class="form-control" value="@Model.ImageUrl"/>
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col text-center">
                <input type="submit" class="btn btn-primary w-50" value="Save changes">
            </div>
            <div class="col text-center">
                <a class="btn btn-danger w-50" asp-controller="Movies" asp-action="Index">Cancel</a>
            </div>
        </div>
    </form>
</div>
