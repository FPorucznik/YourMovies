@model Favourite

@{
    ViewData["Title"] = "Your Movies";
}

<div class="text-center">
    <h1 class="display-4">Remove movie from favourites ?</h1>
</div>
<div class="container">
    <table class="table">
        <tr>
            <td class="align-middle text-center"><img src="@Url.Content(Model.Movie.ImageUrl)" /></td>
            <td class="align-middle" rowspan="4">
                <p><b>@Html.DisplayNameFor(modelItem => Model.Movie.Title):</b> @Model.Movie.Title</p>
                <p><b>@Html.DisplayNameFor(modelItem => Model.Movie.ReleaseYear):</b> @Model.Movie.ReleaseYear</p>
                <p><b>@Html.DisplayNameFor(modelItem => Model.Movie.Director):</b> @Model.Movie.Director</p>
                <p><b>@Html.DisplayNameFor(modelItem => Model.Movie.Genre):</b> @Model.Movie.Genre</p>
            </td>
        </tr>
    </table>
    <div class="row justify-content-center">
        <form method="post" asp-action="RemoveFavourite" asp-controller="Movies">
            <div class="row">
                <div class="col">
                    <input type="submit" class="btn btn-primary" value="Remove from favourites">
                </div>
                <div class="col">
                    <a class="btn btn-danger" asp-controller="Movies" asp-action="Favourites">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>